<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ViewModel.ViewModel; assembly=ViewModel"
        mc:Ignorable="d"
        Title="Bouncing Balls" Height="450" Width="800">
    <Window.Resources>
        <vm:MainViewModel x:Key="MainViewModel"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource MainViewModel}">
        <Canvas>
            <ItemsControl ItemsSource="{Binding Kulki}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Ellipse Width="20" Height="20" Fill="Red" Canvas.Left="{Binding Kulka.PozycjaX}" Canvas.Top="{Binding Kulka.PozycjaY}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Canvas>
        <Button Content="Dodaj kulke" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Click="DodajKulke_Click"/>
    </Grid>
</Window>